                    <ul class={`${Sponsor.styleBenefits}`}>
                        {Sponsor.benefits.map((benefit, i) => (
                            <li class="flex gap-x-3" data-key={i}>
                                <svg
                                    class="h-6 w-5 flex-none text-orange-900"
                                    viewBox="0 0 20 20"
                                    fill="currentColor"
