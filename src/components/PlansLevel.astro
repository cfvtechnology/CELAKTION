            {
                logos.map((logo, index) => (
                <div class={`${logo.class ? logo.class : "bg-gray-800/50 rounded-lg p-8 flex items-center justify-center"}`}>
                  <img
                    class="max-h-20 lg:max-h-25 w-full object-contain"
                    src={logo.src}
                    alt={logo.alt}
